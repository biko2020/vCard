body {
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f4f4f4;
}
.card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}
img {
    width: 100px;
    border-radius: 50%;
}
a {
    text-decoration: none;
    color: blue;
}
.download-btn {
    display: inline-block;
    margin-top: 10px;
    padding: 10px;
    background: #007BFF;
    color: white;
    border-radius: 5px;
}

